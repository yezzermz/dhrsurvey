<!DOCTYPE HTML>
<html>
  <head>
    <title>DHRSurvey</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link href="/stylesheets/homepage.css" media="screen" rel="stylesheet" type="text/css"/>
  </head>
  <body>
      <div class="banner">
        <h1>DHR Health</h1>
        <h3> Patient Survey</h3>
      </div>
      <div class="inputs">
        <form action="/new_survey/create" id="submission" method="POST" enctype="multipart/form-data">
          <label for="first">First name:</label>
          <input type="text" id="first" name="first"><br><br>
          <label for="last">Last name:</label>
          <input type="text" id="last" name="last"><br><br>
          <label for="phone">Phone (xxx xxx xxxx):</label>
          <input type="tel" id="phone" name="phone"><br><br>
          <!-- <div class="rSystem" id="filled" hidden="false"> -->
	          <span>Courtesy of staff who admitted you</span>
	          	<fieldset class="rating">
		          	<input type="radio" id="courtNeg" name="rating1" value="1" />
		          	<input type="radio" id="courtNeu" name="rating1" value="2" />
		          	<input type="radio" id="courtPos" name="rating1" value="3" />
	          	</fieldset>
	          <span>Room cleanliness</span>
	          	<fieldset class="rating">
		          	<input type="radio" id="roomNeg" name="rating2" value="1" />
		          	<input type="radio" id="roomNeu" name="rating2" value="2" />
		          	<input type="radio" id="roomPos" name="rating2" value="3" />
	          	</fieldset>
	          <span>Noise level in and around your room</span>
	          	<fieldset class="rating">
		          	<input type="radio" id="noiseNeg" name="rating3" value="1" />
		          	<input type="radio" id="noiseNeu" name="rating3" value="2" />
		          	<input type="radio" id="noisePos" name="rating3" value="3" />
	          	</fieldset>
	          <span>Quality of food</span>
	          	<fieldset class="rating">
		          	<input type="radio" id="foodNeg" name="rating4" value="1" />
		          	<input type="radio" id="foodNeu" name="rating4" value="2" />
		          	<input type="radio" id="foodPos" name="rating4" value="3" />
	          	</fieldset>
	          <span>Friendliness/courtesy of nurses</span>
	          	<fieldset class="rating">
		          	<input type="radio" id="friendNeg" name="rating5" value="1" />
		          	<input type="radio" id="friendNeu" name="rating5" value="2" />
		          	<input type="radio" id="friendPos" name="rating5" value="3" />
	          	</fieldset>
	        <!-- </div> -->
          <input type="submit" id="submit" value="Submit">
          <span role="alert" id="nameError" aria-hidden="true">
		    Missing or Incorrect Field
		  </span>
        </form>
      </div>

      <script src="/js/validate.js"></script>
      <script src="/js/filled.js"></script>
      
      
  </body>
</html>